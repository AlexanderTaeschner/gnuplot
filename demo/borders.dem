#
set title "Demonstration of different border settings\n and also of a reread loop"
#
unset grid
set xrange [0:15]
#
if (!defined(bb)) bb = -1
bb=(bb+1)%16
set border bb
show border
set label 1 "Border = %.0f",bb  at 8,14 center
plot x notitle
pause -1 "Hit return to continue"
#
if (bb!=15) reread
