#ifndef TERM_PROTO_ONLY
#ifdef TERM_BODY

static int tk_angle = 0;
static int tk_lastx;
static int tk_lasty;
static int tk_color = 0;
static int tk_interactive = 0;
static char *tk_colors[] = { "black", "gray", "red", "blue", "green", "brown", "magenta", "cyan" };

/* {ts} 26-mar-99 */
TERM_PUBLIC void TK_options()
{
	if (!END_OF_COMMAND) {
		if (almost_equals(c_token, "i$nteractive")) {
			tk_interactive = 1;
			c_token++;
		}
	}
	sprintf(term_options, "%s", tk_interactive ? "interactive" : "");
}
/* {ts} */

TERM_PUBLIC void TK_init()
{
    fputs("\
proc gnuplot can {\n\
$can delete all\n\
set cmx [lindex [$can configure -width] 4]\n\
set cmy [lindex [$can configure -height] 4]\n",
	  gpoutfile);

    tk_lastx = tk_lasty = tk_color = 0;
}


TERM_PUBLIC void TK_graphics()
{
}


TERM_PUBLIC void TK_reset()
{
}

TERM_PUBLIC void TK_linetype(linetype)
int linetype;
{
    tk_color = (linetype + 2) & 7;
}

TERM_PUBLIC void TK_move(x, y)
unsigned int x, y;
{
    tk_lastx = x;
    tk_lasty = 1000 - y;
}


TERM_PUBLIC void TK_vector(x, y)
unsigned int x, y;
{
/* {ts} 26-mar-99 */
	extern double min_array[], max_array[];
	extern int xleft, xright, ybot, ytop;
	extern TBOOLEAN is_3d_plot;
	double xlocal[2][2], ylocal[2][2];

#define TK_REAL_VALUE(value,axis) \
min_array[axis]+value*(max_array[axis]-min_array[axis])
#define TK_X_VALUE(value) \
(double)(value-xleft)/(double)(xright-xleft)
#define TK_Y_VALUE(value) \
(double)(value-ybot)/(double)(ytop-ybot)

	if (tk_interactive && !is_3d_plot) {
		/* start point */
		xlocal[0][0] = TK_REAL_VALUE(TK_X_VALUE(tk_lastx),FIRST_X_AXIS);
		xlocal[0][1] = TK_REAL_VALUE(TK_X_VALUE(tk_lastx),SECOND_X_AXIS);
		ylocal[0][0] = TK_REAL_VALUE(TK_Y_VALUE(1000-tk_lasty),FIRST_Y_AXIS);
		ylocal[0][1] = TK_REAL_VALUE(TK_Y_VALUE(1000-tk_lasty),SECOND_Y_AXIS);

		/* end point */
		xlocal[1][0] = TK_REAL_VALUE(TK_X_VALUE(x),FIRST_X_AXIS);
		xlocal[1][1] = TK_REAL_VALUE(TK_X_VALUE(x),SECOND_X_AXIS);
		ylocal[1][0] = TK_REAL_VALUE(TK_Y_VALUE(y),FIRST_Y_AXIS);
		ylocal[1][1] = TK_REAL_VALUE(TK_Y_VALUE(y),SECOND_Y_AXIS);

		fprintf(gpoutfile, "$can bind [\n");
	}

#undef TK_REAL_VALUE
#undef TK_X_VALUE
#undef TK_Y_VALUE

/* {ts} */
    y = 1000 - y;
    fprintf(gpoutfile,
	    "$can create line [expr $cmx * %d /1000] [expr $cmy * %d /1000] [expr $cmx * %d /1000] [expr $cmy * %d /1000] -fill %s\n",
	    tk_lastx, tk_lasty, x, y, tk_colors[tk_color]);
/* {ts} 26-mar-99 */
	if (tk_interactive && !is_3d_plot) {
		fprintf(gpoutfile,
			"] <Button> {gnuplot_xy %f %f %f %f %f %f %f %f}\n",
			xlocal[0][0], ylocal[0][0], xlocal[0][1], ylocal[0][1],
			xlocal[1][0], ylocal[1][0], xlocal[1][1], ylocal[1][1]);
	}
/* {ts} */
    tk_lastx = x;
    tk_lasty = y;
}


TERM_PUBLIC void TK_put_text(x, y, str)
unsigned int x, y;
char *str;
{
    y = 1000 - y;
    fprintf(gpoutfile,
	    "$can create text [expr $cmx * %d /1000] [expr $cmy * %d /1000] -text {%s} -fill %s -anchor w\n",
	    x, y, str, tk_colors[tk_color]);
}

TERM_PUBLIC void TK_text()
{
/* {ts} 26-mar-99 */
	extern double min_array[], max_array[];
	extern int xleft, xright, ybot, ytop;
	extern TBOOLEAN is_3d_plot;
	if (!is_3d_plot) {
		fputs("}\n", gpoutfile);
		fputs("proc gnuplot_init {} {\n", gpoutfile);
		fputs("global", gpoutfile);
		fputs(" x1min x1max y1min y1max", gpoutfile);
		fputs(" x2min x2max y2min y2max", gpoutfile);
		fputs(" xleft xright ybot ytop\n", gpoutfile);
		fprintf(gpoutfile,
			"set x1min %f\nset x1max %f\nset y1min %f\nset y1max %f\n",
			min_array[FIRST_X_AXIS], max_array[FIRST_X_AXIS],
			min_array[FIRST_Y_AXIS], max_array[FIRST_Y_AXIS]);
		fprintf(gpoutfile,
			"set x2min %f\nset x2max %f\nset y2min %f\nset y2max %f\n",
			min_array[SECOND_X_AXIS], max_array[SECOND_X_AXIS],
			min_array[SECOND_Y_AXIS], max_array[SECOND_Y_AXIS]);
		fprintf(gpoutfile,
			"set xleft %d\nset xright %d\nset ybot %d\nset ytop %d\n",
			xleft, xright, ybot, ytop);
		if (tk_interactive) {
			fputs("}\n", gpoutfile);
			fputs("proc gnuplot_xy {x1s y1s x2s y2s x1e y1e x2e y2e} {\n",
				gpoutfile);
			fputs("if {([llength [info commands user_gnuplot_coordinates]])} {\n",
				gpoutfile);
			fputs("user_gnuplot_coordinates $x1s $y1s $x2s $y2s $x1e $y1e $x2e $y2e\n",
				gpoutfile);
			fputs("} else {\n", gpoutfile);
			fputs("puts \"[expr 0.5*($x1s+$x1e)] [expr 0.5*($y1s+$y1e)] ",
				gpoutfile);
			fputs("[expr 0.5*($x2s+$x2e)] [expr 0.5*($y2s+$y2e)]\"\n",
				gpoutfile);
			fputs("}\n", gpoutfile);
		}
	}
/* {ts} */
    fputs("}\n", gpoutfile);
    fflush(gpoutfile);
}


