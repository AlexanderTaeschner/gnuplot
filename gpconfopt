export CPPFLAGS=-I${HOME}/pub/gd1.3

./configure \
  --with-readline=gnu \
  --with-plot \
  --with-gd=${HOME}/pub/gd1.3/ \
  --with-png \
  --with-cwdrc \
  --enable-history-file \
  --enable-thin-splines \
  --enable-mouse "$@"
